async function loadVerse(chapter, verse) {
  const res = await fetch(`../data/rev${chapter}.json`);
  const data = await res.json();
  return data[verse];
}

function shuffle(arr) {
  return arr.sort(() => Math.random() - 0.5);
}

let selected = [];
let correct = [];

function renderPieces(versePieces) {
  const container = document.getElementById("pieces");
  container.innerHTML = "";
  selected = [];
  correct = versePieces;

  shuffle([...versePieces]).forEach(text => {
    const div = document.createElement("div");
    div.className = "piece";
    div.textContent = text;
    div.onclick = () => select(div);
    container.appendChild(div);
  });
}

function select(div) {
  if (!selected.includes(div.textContent)) {
    selected.push(div.textContent);
    div.style.background = "#c8e6c9";
  }
}

function checkAnswer() {
  const result = document.getElementById("result");
  if (JSON.stringify(selected) === JSON.stringify(correct)) {
    result.textContent = "âœ… ì •ë‹µì…ë‹ˆë‹¤! ë§ì”€ì˜ ìˆœì„œë¥¼ ì •í™•íˆ ì•”ì†¡í•˜ì…¨ìŠµë‹ˆë‹¤ ğŸ™";
  } else {
    result.textContent = "âŒ ìˆœì„œê°€ ë‹¤ë¦…ë‹ˆë‹¤. ë‹¤ì‹œ ì‹œë„í•´ë³´ì„¸ìš”.";
  }
}

async function init(chapter, verse) {
  const versePieces = await loadVerse(chapter, verse);
  renderPieces(versePieces);
}
